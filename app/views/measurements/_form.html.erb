<%= form_with(model: measurement, local: true, html: { class: "w-full max-w-md" }) do |form| %>
  <% if measurement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(measurement.errors.count, "error") %> prohibited this measurement from being saved:</h2>
      <ul>
      <% measurement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <div>
      <%= form.label :value, class: 'text-sm text-caption-light font-medium uppercase' %>
    </div>
    <div>
      <%= form.text_field :value, class: 'input mb-2' %>
    </div>
  </div>
  <div class="mb-2">
    <div>
      <%= form.label :subject_type, class: 'text-sm text-caption-light font-medium uppercase' %>
    </div>
    <div>
      <%= form.select(:subject_type, ["Animal", "Cohort", "Enclosure"], {}, class: "input mb-2") %>
    </div>
    <div>
      <%= form.label :measurement_type, class: 'text-sm text-caption-light font-medium uppercase' %>
    </div>
    <div>
      <%= form.select(:measurement_type_id, MeasurementType.where(organization_id: measurement.organization_id).pluck(:name, :id), {}, class: "input mb-2") %>
    </div>
  </div>
  <div>
  <div>
    <div>
      <%= form.submit('Submit', class: 'bg-primary-dark hover:bg-primary text-white font-bold py-2 px-4 rounded inline-flex items-center mt-4') %>
    </div>
  </div>
<% end %>
