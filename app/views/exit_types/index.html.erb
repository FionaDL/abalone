<section class="h-screen bg-background md:p-12 sm:w-100 p-0">
  <div class="container mx-auto bg-white py-6 px-8 rounded-md shadow-sm">
    <p id="notice"><%= notice %></p>
    <div class="flex md:flex-row flex-col md:justify-between mb-4">
      <h1 class="text-title2 text-center">Exit Types</h1>
      <div class="flex items-center justify-center">
        <%= link_to new_exit_type_path do %>
          <button class="bg-primary-dark hover:bg-primary text-white font-bold py-2 px-4 rounded inline-flex items-center mr-4">
            <%= image_tag  "icons/plus.png", size: 17 %>
            <span class="ml-2 hidden md:block">New Exit Type</span>
            <span class="ml-2 md:hidden">New</span>
          </button>
        <% end %>
      </div>
    </div>
    <table class="table-auto w-full border">
      <thead>
        <tr class="border">
        <th class="text-sm text-caption-light font-medium px-4 py-2 uppercase" scope="col">Id</th>
          <th class="text-sm text-caption-light font-medium px-4 py-2 uppercase" scope="col">Name</th>
          <th class="text-sm text-caption-light font-medium px-4 py-2 uppercase" colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @exit_types.each do |exit_type| %>
          <tr>
            <td class="px-4 py-2" data-label="Id"><%= exit_type.id %></td>
            <td class="px-4 py-2" data-label="Name"><%= exit_type.name %></td>
            <td class="text-base px-0 py-0 align-middle flex items-center" data-label="Actions">
              <%= link_to 'Show', exit_type,
                'aria-label': "Show #{exit_type.name}", class: 'text-primary-dark'  %>

              <%= link_to image_tag("icons/edit.svg"),
                edit_exit_type_path(exit_type),
                'aria-label': "Edit #{exit_type.name}", class: 'w-5 mx-2' %>

              <% if exit_type.mortality_events.empty? %>
                <%= link_to image_tag("icons/trash.svg"),
                  exit_type, method: :delete, data: { confirm: 'Are you sure?' },
                  'aria-label': "Delete #{exit_type.name}", class: 'w-5 mx-2' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>